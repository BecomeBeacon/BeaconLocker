<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <ImageView
        android:id="@+id/lost_device_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/rssiFlow"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/message"
        android:layout_alignStart="@+id/lost_device_image" />
    <TextView
        android:id="@+id/distanceText"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text = "기기와의 거리"
        android:textSize="30dp"
        android:layout_above="@+id/rssiFlow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />
    <EditText
        android:id="@+id/message"
        android:layout_width="258dp"
        android:layout_height="49dp"
        android:layout_column="1"
        android:layout_row="1"
        android:drawableLeft="@drawable/ic_create"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="15sp"
        android:layout_marginBottom="32dp"
        android:layout_above="@+id/sendMessageButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/editMButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="EDIT"
        android:layout_alignBottom="@+id/message"
        android:layout_alignEnd="@+id/message" />
    <Button
        android:id="@+id/sendMessageButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="메시지 전송"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>