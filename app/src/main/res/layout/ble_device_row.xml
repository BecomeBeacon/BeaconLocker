<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView android:id="@+id/text_bd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text_bd_name"/>
        <TextView android:id="@+id/text_bd_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text_bd_address"/>

        <TextView
            android:id="@+id/text_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text_distance" />


    </LinearLayout>
    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="49dp"
        android:id="@+id/relativeLayout">
        <Button android:id="@+id/button_connect"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="@string/connect"
            android:textSize="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <TextView android:id="@+id/text_uuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text_uuid"/>
        <TextView android:id="@+id/text_major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text_major"/>
        <TextView android:id="@+id/text_minor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text_minor"/>
        <TextView android:id="@+id/text_rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text_rssi"/>
        <TextView android:id="@+id/text_txpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text_txpower"/>
        <TextView android:id="@+id/text_timeout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="text_timeout"/>
    </LinearLayout>
</RelativeLayout>



